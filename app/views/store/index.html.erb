<h1>Store#index</h1>
<% if notice %>
    <p>Find me in app/views/store/index.html.erb</p>
<% end %>

<h1>Pragmaticカタログ</h1>

<% @products.each do |product| %>
    <div class="entry">
        <%= image_tag(product.image_url) %>
        <h3><%= product.title %></h3>
        <%= sanitize(product.description) %>
        <div class="price_line">
            <span class="price"><%= number_to_currency(product.price) %></span>
        </div>
    </div>
<% end %>
